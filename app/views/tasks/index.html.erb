<h1>My Tasks</h1>

<% @tasks.each do |task| %>
  <p>Title: <%= link_to task.title, task_path(task) %></p>
  <%= link_to "Delete",
            task_path(task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
  <br>
<% end %>

<br>

